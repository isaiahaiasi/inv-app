{{#> main_content}}
  <h3 class="text-4xl">{{product.name}}</h3>
  <section class="pt-4 pb-4">
    <img src={{product.img.url}} alt="Category image">
  </section>
  <dl class="flex flex-col">
    <div>
      <dt class="text-xl">description</dt>
      <dd>{{product.description}}</dd>
    </div>
    <div>
      <dt class="text-xl">category</dt>
      <dd>{{product.category.name}}</dd>
    </div>
    <div>
      <dd class="text-xl">price:</dd>
      <dd>{{product.priceFormatted}}</dd>
    </div>
    <div>
      <dt class="text-xl">remaining:</dt>
      <dd>{{product.stock}}</dd>
    </div>
  </dl>
  <a href={{link product.url "/update"}}>
    {{#> button}} Update product {{/button}}
  </a>
  <a href={{link product.url "/delete"}}>
    {{#> button warn=true}} Delete product {{/button}}
  </a>
{{/main_content}}