{{#> main_content}}
  <h3 class="text-5xl">{{category.name}}</h3>
  {{#if category.img_url}}
    <img src={{category.img_url}}>
  {{/if}}
  {{#if products}}
    <ul class="flex flex-col">
      {{#each products}}
        <li>
          {{> product_card product=this}}
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>There are no items in this category.</p>
  {{/if}}
  <a href={{link category.url "/update"}}>
    {{#> button}} Update category {{/button}}
  </a>
  <a href={{link category.url "/delete"}}>
    {{#> button warn=true}} Delete category {{/button}}
  </a>
{{/main_content}}