{{#> main_content}}
  <h3 class="text-6xl">{{category.name}}</h3>
  {{#if products}}
    <ul>
      {{#each products}}
        <li>
          {{> product_card product=this}}
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>There are no items in this category.</p>
  {{/if}}
  <a href={{link category.url "/delete"}}>
    {{#> button}} Delete category {{/button}}
  </a>
{{/main_content}}