{{#> main_content}}
  <h1 class="block text-6xl leading-normal">{{title}}</h1>
  <section class="leading-loose">
    <ul class="flex flex-col">
      {{#each categories}}
        <li>
          <h3 class="text-2xl">
            <a href={{this.url}}>
              {{this.name}}
            </a>
          </h3>
          {{!-- TODO: I want to display either a count of items in cat, or just if empty --}}
        </li>
      {{/each}}
    </ul>
  </section>
{{/main_content}}